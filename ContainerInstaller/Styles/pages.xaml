<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ContainerInstaller.Styles">

    <SolidColorBrush x:Key="ApplicationBackgroundColor" Color="AliceBlue" />

    <!-- General style for all pages -->
    <Style x:Key="GeneralPageStyle" TargetType="UserControl">
        <Setter Property="Background" Value="{StaticResource ApplicationBackgroundColor}" />
    </Style>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource ApplicationBackgroundColor}" />
    </Style>
    
</ResourceDictionary>